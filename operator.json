{
  "name": "Export Report",
  "description": "Export a workflow report in different file formats.",
  "tags": ["export", "reporting", "workflow"],
  "authors": ["tercen"],
  "urls": ["https://github.com/tercen/export_operator"],
  "container": "tercen/export_operator:latest",
  "properties": [
    {
      "kind": "EnumeratedProperty",
      "name": "OutputFormat",
      "defaultValue": "MS-PowerPoint (*.pptx)",
      "description": "Format in which the report is exported.",
      "values": [
        "MS-PowerPoint (*.pptx)",
        "MS-Word (*.docx)",
        "PDF - Slides (*.pdf)",
        "PDF - A4 (*.pdf)"
      ]
    },
    {
      "kind": "EnumeratedProperty",
      "name": "SVGOptimization",
      "defaultValue": "Bitmap Auto",
      "description": "SVG plot simplification to reduce the quantity of individual scatter plot points.",
      "values": [
        "None",
        "Bitmap",
        "Bitmap Auto",
        "Path"
      ]
    },
    {
      "kind": "EnumeratedProperty",
      "name": "LabelPosition",
      "defaultValue": "Right",
      "description": "Position of the labels in the plot.",
      "values": [
        "Ignore",
        "Left",
        "Right"
      ]
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Placeholder Factor",
            "type": "",
            "description": "A placeholder factor as crosstab projections are not used in this operator.",
            "ontologyMapping": "placeholder",
            "crosstabMapping": "row",
            "cardinality": "1",
            "factors": []
          }
        ],
        "axis": []
      }
    ]
  }
}